@page "/clients/create"
@inject HttpClient Http
@inherits Createclient
@using MudBlazor
@using System.ComponentModel.DataAnnotations
@using WebUi.Services.Interface
@using WebUi.Pages.Client

<MudGrid>
    <MudPaper Class="pa-4">
        <MudForm>
            <MudTextField T="string" @bind-Value="Name" Label="Nome" Required="true" RequiredError="User name is required!" />

            <MudTextField T="string" @bind-Value="Email" Label="Email" Required="true" RequiredError="Email is required!"
                          Validation="@(new EmailAddressAttribute() { ErrorMessage = "The email address is invalid" })" />

            <MudTextField T="string" Label="Password" HelperText="Choose a strong password"
                          InputType="InputType.Password"
                          Required="true" RequiredError="Password is required!" />

            <MudTextField T="string" Label="Repeat Password" HelperText="Repeat the password"
                          InputType="InputType.Password" />
        </MudForm>
    </MudPaper>
</MudGrid>

