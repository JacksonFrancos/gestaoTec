@page "/clientes/cadastro"
@inherits CadastroClienteBase
@using WebUI.Models
@using MudBlazor

<MudPaper Class="p-4 mx-auto" Style="max-width:500px">
    <MudText Typo="Typo.h5">Cadastro de Cliente</MudText>

    <EditForm Model="_cliente" OnValidSubmit="SalvarCliente">
        <MudTextField Label="Nome" @bind-Value="_cliente.Nome" Required="true" />
        <MudTextField Label="Email" @bind-Value="_cliente.Email" Required="true" />
        <MudTextField Label="Telefone" @bind-Value="_cliente.Telefone" Required="true" />

        <MudButton Type="Submit" Color="Color.Primary" Class="mt-2">Salvar</MudButton>
    </EditForm>
</MudPaper>